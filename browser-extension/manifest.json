{
  "manifest_version": 3,
  "name": "Track My Jobs",
  "version": "1.0",
  "description": "Track your job applications effortlessly.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*",
        "https://smartapply.indeed.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://*.indeed.com/*",
    "https://smartapply.indeed.com/*"
  ]
}